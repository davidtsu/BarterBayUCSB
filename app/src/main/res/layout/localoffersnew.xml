<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingMapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:srcCompat="@android:drawable/ic_menu_mapmode"
            app:layout_anchorGravity="bottom|end"
            android:layout_gravity="bottom|end" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="4dp">


                <!-- A CardView that contains a TextView -->
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view1"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="2dp"
                    android:paddingBottom="2dp">
                    <!--card_view:cardCornerRadius="4dp"-->

                    <ImageView
                        android:id="@+id/card_image1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="?attr/colorAccent"
                        android:layout_gravity="right" />

                    <TextView
                        android:id="@+id/info_text1"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginEnd="74dp"
                        android:paddingLeft="8dp"
                        android:textAppearance="@android:style/TextAppearance.Material.Display1"
                        android:text="test"
                        android:gravity="center_vertical"
                        android:textSize="24sp"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="sans-serif" />

                </android.support.v7.widget.CardView>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="4dp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view2"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="2dp">
                    <!--card_view:cardCornerRadius="4dp"-->

                    <ImageView
                        android:id="@+id/card_image2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="?attr/colorAccent"
                        android:layout_gravity="right"  />

                    <TextView
                        android:id="@+id/info_text2"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginEnd="74dp"
                        android:paddingLeft="8dp"
                        android:textAppearance="@android:style/TextAppearance.Material.Display1"
                        android:text="test"
                        android:gravity="center_vertical"
                        android:textSize="24sp"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="sans-serif"/>

                </android.support.v7.widget.CardView>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="4dp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view3"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="2dp">
                    <!--card_view:cardCornerRadius="4dp"-->

                    <ImageView
                        android:id="@+id/card_image3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="?attr/colorAccent"
                        android:layout_gravity="right"  />

                    <TextView
                        android:id="@+id/info_text3"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginEnd="74dp"
                        android:paddingLeft="8dp"
                        android:textAppearance="@android:style/TextAppearance.Material.Display1"
                        android:text="test"
                        android:gravity="center_vertical"
                        android:textSize="24sp"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="sans-serif"/>

                </android.support.v7.widget.CardView>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="4dp" />

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view4"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="2dp">
                    <!--card_view:cardCornerRadius="4dp"-->

                    <ImageView
                        android:id="@+id/card_image4"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="?attr/colorAccent"
                        android:layout_gravity="right" />

                    <TextView
                        android:id="@+id/info_text4"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginEnd="74dp"
                        android:paddingLeft="8dp"
                        android:textAppearance="@android:style/TextAppearance.Material.Display1"
                        android:text="test"
                        android:gravity="center_vertical"
                        android:textSize="24sp"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="sans-serif" />

                </android.support.v7.widget.CardView>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="4dp" />
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view5"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="2dp">
                    <!--card_view:cardCornerRadius="4dp"-->

                    <TextView
                        android:id="@+id/info_text5"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginEnd="74dp"
                        android:paddingLeft="8dp"
                        android:textAppearance="@android:style/TextAppearance.Material.Display1"
                        android:text="test"
                        android:gravity="center_vertical"
                        android:textSize="24sp"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="sans-serif"/>

                    <ImageView
                        android:id="@+id/card_image5"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="?attr/colorAccent"
                        android:layout_gravity="right"
                        android:elevation="0dp" />

                </android.support.v7.widget.CardView>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="4dp" />
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view6"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="2dp">
                    <!--card_view:cardCornerRadius="4dp"-->

                    <ImageView
                        android:id="@+id/card_image6"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="?attr/colorAccent"
                        android:layout_gravity="right"  />

                    <TextView
                        android:id="@+id/info_text6"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginEnd="74dp"
                        android:paddingLeft="8dp"
                        android:textAppearance="@android:style/TextAppearance.Material.Display1"
                        android:text="test"
                        android:gravity="center_vertical"
                        android:textSize="24sp"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="sans-serif"/>

                </android.support.v7.widget.CardView>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="4dp" />
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view7"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="2dp">
                    <!--card_view:cardCornerRadius="4dp"-->

                    <ImageView
                        android:id="@+id/card_image7"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:backgroundTint="?attr/colorAccent"
                        android:layout_gravity="right"  />

                    <TextView
                        android:id="@+id/info_text7"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginEnd="74dp"
                        android:paddingLeft="8dp"
                        android:textAppearance="@android:style/TextAppearance.Material.Display1"
                        android:text="test"
                        android:gravity="center_vertical"
                        android:textSize="24sp"
                        android:textColor="?attr/colorPrimary"
                        android:fontFamily="sans-serif"/>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    android:orientation="horizontal"

                    <Button
                        android:text="Previous Page"
                        android:layout_height="wrap_content"
                        android:id="@+id/previousButton"
                        android:layout_gravity="center"
                        android:layout_width="130dp" />

                    <TextView
                        android:text="Page x of x"
                        android:layout_width="119dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/pageNoTextView"
                        android:textAppearance="@android:style/TextAppearance.Material.Small"
                        android:gravity="center"
                        android:layout_weight="1" />

                    <Button
                        android:text="Next Page"
                        android:layout_height="wrap_content"
                        android:id="@+id/nextButton"
                        android:layout_width="130dp" />


                </LinearLayout>

                <Button
                    android:text="Delete all local posts (debug)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/deletebutton"
                    android:layout_gravity="center"/>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>