<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_weight="0.01"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:adjustViewBounds="false"
            android:background="?android:attr/colorAccent"
            android:clickable="false"
            android:contentDescription="displays the image"
            android:cropToPadding="true"
            android:elevation="0dp"
            android:scaleType="fitCenter"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/UserNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.94"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_vertical|center"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:text="Username"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textSize="24sp" />

            <RatingBar
                android:isIndicator="true"
                android:id="@+id/ratingBarUser"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:foregroundGravity="center_horizontal"
                android:paddingTop="10dp"
                android:rating="3"
                android:scaleX=".7"
                android:scaleY=".7" />

            <TextView
                android:id="@+id/EmailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:text="test@domain.com"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.89"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Previous Review"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="203dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/reviewText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:text="sample review"
                android:layout_weight="0.99" />

            <RatingBar
                android:isIndicator="true"
                android:id="@+id/ratingBarReviewDisplay"
                android:layout_width="240dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:clickable="false"
                android:foregroundGravity="center_horizontal"
                android:paddingTop="10dp"
                android:rating="3"
                android:scaleX=".45"
                android:scaleY=".45" />
        </LinearLayout>

        <Button
            android:id="@+id/button5"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Next Review"
            android:textSize="10sp" />
    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="0.08" />

    <Button
        android:id="@+id/contactUserButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Contact User"></Button>

    <Button
        android:id="@+id/ReviewUserButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Review User"></Button>

    <Button
        android:id="@+id/doneButtonUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="done"></Button>

</LinearLayout>